<% if @restaurants %>
<div class="text-center">
  <% @restaurants.each do |restaurant| %>
    <h2><%= restaurant.name %></h2>
    <p><strong>Number of transactions:</strong><%= restaurant.transactions.count %></p>
  <% end %>
</div>
<% end %>
<div class="text-center">
  <p id="notice"><%= notice %></p>
  <p>
    <strong>User:</strong>
    <%= @user.full_name %>
  </p>

  <p>
    <strong>Email:</strong>
    <%= @user.email %>
  </p>

  <p>
    <strong>Maximum Number of Boxes:</strong>
    <%= @user.purchased_boxes %>
  </p>

  <%= link_to 'Edit', edit_user_registration_path %> |
  <%= link_to "Back", :back %>
</div>
