    <%= f.label :number_of_boxes %>
    <%= f.number_field :number_of_boxes %>
  </div>

  <div class="field">
    <%= f.label :returned %>
    <%= f.check_box :returned %>
  </div>

  <div class="field">
    <%= f.label :taken %>
    <%= f.check_box :taken %>
  </div>

  <div class="actions">
